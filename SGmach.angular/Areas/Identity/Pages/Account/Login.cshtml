
@page
@model LoginModel

@{
    ViewData["Title"] = "הכנס";
}


<div class="row">
        <div class="col-md-6 col-md-offset-2">
         <img src="~/logo.png" alt="Sample Image" width="300px" />
    </div>
    <div class="col-md-4">
        <section>
               <h1>@ViewData["Title"]</h1>
            <form id="account" method="post">
                <h4>הכנס כתובת משתמש וסיסמה</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">כתובת מייל</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">סיסמה</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            ?זכור אותי @* @Html.DisplayNameFor(m => m.Input.RememberMe) *@
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-dark">הכנס</button>
                </div>
                <div class="form-group">
                    @* <p>
                        <a id="forgot-password" asp-page="./ForgotPassword"> ?שכחת את הסיסמה</a>
                    </p> *@
                    @* <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p> *@
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
